{{#partial "otherHead"}}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
{{/partial}}



{{#partial "contenido"}}

	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 	<div class="well-profile">
            	<div class="col-sm-12">
                	<div class="col-xs-12 col-sm-8">
                    	<h2>{{nombreUsuario}}</h2>
                    	<p><strong>Cantidad Maxima de prendas: </strong> {{maxPrendas}} </p>
                    	<p><strong>Tipo de perfil: </strong> {{tipo}} </p>
    	            </div>
            	</div>

            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong> {{cantGuardarropas}} </strong></h2>
                    <p><small>Guardarropas</small></p>
                    <form action="/guardarropas" method="GET">
                 		<input class="btn btn-success btn-block" type="submit" value="Ver guardarropas" />
					</form>
				</div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong>{{cantPrendas}}</strong></h2>
                    <p><small>Cantidad de prendas</small></p>
                    <form action="/prenda/nueva" method="GET">
                 		<input class="btn btn-success btn-block" type="submit" value="Agregar prenda" />
					</form>
                </div>
            </div>
    	 </div>
		</div>
	</div>
</div>


{{/partial}}
{{>layout.hbs}}
